            <ListView layoutX="27.0" layoutY="84.0" prefHeight="273.0" prefWidth="581.0" />
            <Label layoutX="27.0" layoutY="18.0" text="Account:" />
            <ChoiceBox layoutX="75.0" layoutY="14.0" prefHeight="25.0" prefWidth="165.0" />
            <Button layoutX="494.0" layoutY="14.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="112.0" text="Add enrollment" />
            <Button layoutX="494.0" layoutY="46.0" mnemonicParsing="false" text="Delete enrollment" />
         </children>
    </AnchorPane>
  </children>
