  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Home">
          <items>
            <MenuItem mnemonicParsing="false" text="Go to the homepage" onAction="#goToHomePage"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Module">
          <items>
            <MenuItem mnemonicParsing="false" text="All modules" onAction="#goToAllModules"/>          
            <MenuItem mnemonicParsing="false" text="All accounts" onAction="#goToModuleProgressAll"/>
