            <MenuItem mnemonicParsing="false" text="Selected account" onAction="#goToWebcastProgressSelected"/>
            <MenuItem mnemonicParsing="false" text="Top Webcasts" onAction="#goToTopWebcasts"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Manage students">
          <items>
            <MenuItem mnemonicParsing="false" text="Student" onAction="#goToStudents"/>
            <MenuItem mnemonicParsing="false" text="Add student" onAction="#goToAddStudent"/>
